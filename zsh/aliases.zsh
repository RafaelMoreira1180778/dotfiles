if command -v eza >/dev/null 2>&1; then
    alias ls='eza --group-directories-first'
    alias ll='eza -la --group-directories-first --git'
    alias la='eza -la --group-directories-first'
    alias tree='eza --tree --level=2'
else
    alias ls='ls -G'
